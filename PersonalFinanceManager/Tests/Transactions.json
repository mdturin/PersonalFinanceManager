{
  "info": {
    "name": "PersonalFinanceManager Transactions",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "https://localhost:5001" },
    { "key": "accessToken", "value": "" },
    { "key": "accountId", "value": "" },
    { "key": "transactionId", "value": "" }
  ],
  "item": [
    {
      "name": "Get All Transactions",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/transactions",
          "host": ["{{baseUrl}}"],
          "path": ["api", "transactions"]
        }
      }
    },
    {
      "name": "Get Transaction By Id",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/transactions/{{transactionId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "transactions", "{{transactionId}}"]
        }
      }
    },
    {
      "name": "Create Transaction",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "pm.collectionVariables.set('transactionId', json);",
              "console.log('Created Transaction Id:', json);"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/transactions",
          "host": ["{{baseUrl}}"],
          "path": ["api", "transactions"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"accountId\": \"{{accountId}}\",\n  \"type\": 0,\n  \"amount\": 1000,\n  \"description\": \"Test Income\",\n  \"categoryId\": null,\n  \"date\": \"2026-02-04T00:00:00Z\"\n}"
        }
      }
    },
    {
      "name": "Update Transaction",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/transactions/{{transactionId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "transactions", "{{transactionId}}"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 1500,\n  \"description\": \"Updated Income\",\n  \"categoryId\": null,\n  \"date\": \"2026-02-04T00:00:00Z\"\n}"
        }
      }
    },
    {
      "name": "Delete Transaction",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/transactions/{{transactionId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "transactions", "{{transactionId}}"]
        }
      }
    }
  ]
}
